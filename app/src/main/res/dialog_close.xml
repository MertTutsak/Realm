<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewMetin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programı kapatmak istediğinize emin misiniz?"
        android:textColor="@color/colorButtonText"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_below="@+id/textViewMetin">

        <Button
            android:id="@+id/buttonNegative"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/buttonPositive"
            android:background="@color/colorButtonText"
            android:text="Hayır" />

        <Button
            android:id="@+id/buttonPositive"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@color/colorButtonText"
            android:text="Evet" />
    </RelativeLayout>
</RelativeLayout>